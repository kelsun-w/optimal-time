<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/title_settings"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <PreferenceCategory
            android:key="pref_timer_lengths"
            android:title="@string/timer_intervals_setting">

        <DropDownPreference
                android:key="pref_work_duration"
                android:title="@string/pref_length_work"
                android:entries="@array/pref_entries_work_length"
                android:summary="%s"
                android:entryValues="@array/pref_entries_work_length"
        />
        <DropDownPreference
                android:key="pref_sbreak_length"
                android:title="@string/pref_length_Sbreak"
                android:summary="%s"
                android:entries="@array/pref_entries_sbreak_length"
                android:entryValues="@array/pref_entries_sbreak_length"
        />
        <DropDownPreference
                android:key="pref_lbreak_length"
                android:title="@string/pref_length_Lbreak"
                android:summary="%s"
                android:entries="@array/pref_entries_lbreak_length"
                android:entryValues="@array/pref_entries_lbreak_length"
        />
        <DropDownPreference
                android:key="pref_work_before_lbreak"
                android:title="@string/pref_work_before_Lbreak"
                android:summary="%s"
                android:entries="@array/pref_entries_workbefore_lbreak_length"
                android:entryValues="@array/pref_entries_workbefore_lbreak_length"
        />
    </PreferenceCategory>

    <Preference
            app:key="feedback"
            app:title="Send feedback"
            app:summary="Report technical issues or suggest new features"/>

</PreferenceScreen>