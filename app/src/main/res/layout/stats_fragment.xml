            <!--android:id="@+id/statfselectdate2label"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/statf_selectdate2"-->
            <!--android:layout_below="@id/statfselecttasklabel"-->
            <!--android:layout_toEndOf="@id/statfselectdate1"/>-->
            <!--<TextView-->
            <!--android:id="@+id/statfselectdate2"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignTop="@+id/statfselectdate1label"-->
            <!--android:layout_toEndOf="@+id/statfselectdate2label"-->
            <!--android:layout_alignEnd="@id/statfselecttask"-->
            <!--android:layout_marginStart="20dp"-->
            <!--tools:text="19/07/2019"/>-->

            <com.google.android.material.tabs.TabLayout
                    android:id="@+id/statf_tab2"
                    android:layout_width="300dp"
                    android:layout_height="@dimen/tab_size"
                    android:layout_below="@id/statf_tab1"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/tab_background"
                    app:tabSelectedTextColor="@android:color/white"
                    app:tabIndicator="@drawable/tab_indicator"
                    app:tabRippleColor="@android:color/transparent">

                <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/statf_sort1"/>

                <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/statf_sort2"/>

                <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/statf_sort3"/>
            </com.google.android.material.tabs.TabLayout>
            <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/statfhistory_bar"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_below="@id/statf_tab2" android:layout_marginTop="-7dp"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/statf_container3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/container_border_shadow">
            <TextView
                    android:id="@+id/statfheader3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/statf_header3"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:layout_alignParentTop="true"/>
            <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/backgroundDark"
                    android:layout_below="@id/statfheader3"/>
            <com.google.android.material.tabs.TabLayout
                    android:id="@+id/statf_tab3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/divider3">

                <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/statf_distselect1"/>

                <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/statf_distselect2"/>

            </com.google.android.material.tabs.TabLayout>
            <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/sdistribtion_pie"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_below="@id/statf_tab3"/>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>