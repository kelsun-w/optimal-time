<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:layout_width="381dp"
            android:layout_height="373dp"
            android:id="@+id/progress_countdown"
            style="@style/Widget.MaterialProgressBar.ProgressBar"
            android:minWidth="306dp"
            android:minHeight="306dp"
            android:indeterminate="false"
            app:mpb_showProgressBackground="true"
            android:progressBackgroundTint="@color/colorAccent"
            android:backgroundTint="@color/colorPrimaryDark"

            app:layout_constraintBottom_toTopOf="@+id/fab_pause" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.728" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:clickable="true" app:srcCompat="@drawable/ic_play_arrow_24dp"
            android:id="@+id/fab_start" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/fab_pause"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:clickable="true" app:srcCompat="@drawable/ic_pause_24dp"
            android:id="@+id/fab_pause" app:layout_constraintStart_toEndOf="@+id/fab_start"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/fab_stop"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.491" android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:clickable="true" app:srcCompat="@drawable/ic_stop_24dp"
            android:id="@+id/fab_stop" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="84dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/fab_pause"/>
    <TextView
            android:text="TextView"
            android:layout_width="136dp"
            android:layout_height="52dp"
            android:gravity="center"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/progress_countdown"
            app:layout_constraintTop_toTopOf="@+id/progress_countdown"
            app:layout_constraintEnd_toEndOf="@+id/progress_countdown" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/progress_countdown"
            android:id="@+id/countdown"/>
    <TextView
            android:text="Timer Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timertask_name" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/progress_countdown" android:textSize="30sp"
            app:layout_constraintVertical_bias="0.958"/>
    <TextView
            android:text="@string/timer_break_message"
            android:layout_width="193dp"
            android:layout_height="42dp"
            android:id="@+id/break_msg"
            android:gravity="center"
            android:visibility="visible"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/countdown" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/timer_break_message2"
            android:layout_width="193dp"
            android:layout_height="22dp"
            android:id="@+id/break_msg2"
            app:layout_constraintStart_toStartOf="@+id/progress_countdown"
            app:layout_constraintEnd_toEndOf="@+id/progress_countdown"
            app:layout_constraintHorizontal_bias="0.505"
            android:gravity="center"
            android:visibility="visible" android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/break_msg" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/progress_countdown" app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>